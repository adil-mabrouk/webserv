server {
    listen 127.0.0.1:8080;
    server_name example.com;

    error_page 404 /errors/404.html;
    client_max_body_size 2k;

    location / {
        root /var/www/html;
        index index.html;
        autoindex off;
        methods GET POST;
    }

    location /upload {
        root /var/www/upload;
        methods POST DELETE;
        upload_store /tmp/uploads;
    }
}
