server {
    listen 127.0.0.1:8080;
    server_name example.com;

    error_page 404 /errors/404.html;
    client_max_body_size 10M;
	root /var/www/html;

    location / {
        root /var/www/html;
        index index.html;
        autoindex off;
        methods GET POST;
    }

    location /upload {
        root /var/www/upload;
        methods POST;
        upload_store /tmp/uploads;
    }

    location /cgi-bin {
        cgi_extension .php;
        cgi_path /usr/bin/php-cgi;
    }
}