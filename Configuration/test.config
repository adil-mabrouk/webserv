server {
    listen 0.0.0.0:8080;
    listen 127.0.0.1:9092;

    client_max_body_size 3;

    error_page 404 400 /errors/404.html;
    error_page 500 errors/500.html;

    location /a/b {
        root /var/www/html;
        index index.html index.htm;
        methods GET POST DELETE;
        autoindex off;
    }

    location /a/b/ {
        root /var/www/html;
        index index.html index.htm;
        methods GET POST DELETE;
        autoindex off;
    }
}


server {
    listen 0.0.0.0:9999;
    listen 127.0.0.1:8989;

    client_max_body_size 4;

    error_page 404 400 /errors/404.html;
    error_page 500 errors/500.html;

    location / {
        root /var/www/html;
        index index.html index.htm;
        methods GET POST DELETE;
        autoindex off;
    }

    location /cgi-bin {
        root /var/www;
        methods GET POST;
        cgi_extension .php /usr/bin/php-cgi;
        cgi_extension .py /usr/bin/python3;
    }

    location ../upload {
        root /var/www/html;
        methods POST DELETE;
        upload_store /var/www/uploads;
    }
    
    location /files {
        root var/www;
        methods GET;
        autoindex on;
    }

    location /redirect-me {
        return 301 /;
    }
}

