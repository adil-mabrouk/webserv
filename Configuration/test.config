server {
    listen 0.0.0.0:7070;
    listen 127.0.0.1:9999;

    client_max_body_size 3;

    error_page 404 400 /errors/404.html;
    error_page 500 /;

    location "" {
        root /var/www/html;
        index index.html index.htm;
        methods GET POST DELETE;
        autoindex off;
    }

    location /a/b/ {
        root /var/www/html;
        index index.html index.htm;
        methods GET POST DELETE;
        autoindex off;
    }
}
