
server {
    listen 8080;
    server_name localhost;
    
    client_max_body_size 10M;
    
    error_page 404 /errors/404.html;
    error_page 500 502 503 504 /errors/50x.html;
    
    location / {
        root /var/www/html;
        index index.html index.htm;
        allowed_methods GET POST;
    }
    

    location /static {
        root /var/www;
        allowed_methods GET;
        autoindex off;
    }
    

    location /upload {
        root /var/www;
        allowed_methods GET POST DELETE;
        upload_enable on;
        upload_store /var/www/uploads;
        client_max_body_size 50M;  # Override for this location
    }
    

    location /files {
        root /var/www;
        allowed_methods GET;
        autoindex on;
    }
    

    location /cgi-bin {
        root /var/www;
        allowed_methods GET POST;
        cgi_extension .php;
        cgi_path /usr/bin/php-cgi;
    }
    

    location /old-url {
        return 301 /new-url;
    }
}


server {
    listen 8081;
    server_name api.localhost;
    
    client_max_body_size 5M;
    
    error_page 404 /api_errors/404.json;
    
    location /api {
        root /var/www;
        allowed_methods GET POST DELETE;
    }
    
    location /api/python {
        root /var/www;
        allowed_methods GET POST;
        cgi_extension .py;
        cgi_path /usr/bin/python3;
    }
}


server {
    listen 9000;
    
    location / {
        root /var/www/files;
        allowed_methods GET;
        autoindex on;
    }
}